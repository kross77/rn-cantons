{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "jsx": "react",
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules/*"
  ]
}
