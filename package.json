{
  "name": "myprojectname",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "features/*",
      "features/*/functions",
      "features/*/web-component",
      "features/*/mobile-component",
      "features/*/tg-bot",
      "components/*",
      "projects/*",
      "projects/*/functions"
    ]
  },
  "scripts": {
    "android": "yarn workspace mobile android",
    "format": "prettier --write .",
    "ios": "yarn workspace mobile ios",
    "lint": "eslint .",
    "studio": "yarn workspace mobile studio",
    "test": "yarn workspaces run test",
    "config": "yarn config:ios && yarn config:android",
    "config:ci": "yarn config:ios --token '$FIREBASE_TOKEN' && yarn config:android --token '$FIREBASE_TOKEN'",
    "config:ios": "firebase apps:sdkconfig iOS > ios/GoogleService-Info.plist",
    "config:android": "firebase apps:sdkconfig Android > android/app/google-services.json",
    "tcp": "adb reverse tcp:8081 tcp:8081 && adb reverse tcp:7007 tcp:7007 ",
    "xcode": "yarn workspace mobile xcode"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.13.0",
    "@react-native-community/eslint-config": "2.0.0",
    "eslint": "7.14.0",
    "eslint-config-prettier": "6.15.0",
    "husky": "4.3.0",
    "lerna": "^3.21.0",
    "lint-staged": "10.5.1",
    "prettier": "2.2.0",
    "typescript": "4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,html,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4"
  }
}
