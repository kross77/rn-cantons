{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "target": "ES6",
    "moduleResolution": "Node",
    "module": "ES6",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
